<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:enterFadeDuration="1000">
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <corners android:bottomRightRadius="30dp" android:topRightRadius="30dp" />
            <solid android:color="@color/color_transparent" />
        </shape>
    </item>
    <item android:state_checked="true">
        <inset android:insetRight="15dp">
            <shape android:shape="rectangle">
                <corners android:bottomRightRadius="30dp" android:topRightRadius="30dp" />
                <solid android:color="@color/color_purple" />
            </shape>
        </inset>
    </item>
</selector>