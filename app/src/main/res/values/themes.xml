<resources>

    <style name="AppThemeDark" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <item name="colorPrimary">@color/color_purple</item>
        <item name="colorPrimaryDark">@color/color_purple</item>
        <item name="colorAccent">@color/color_night</item>
        <item name="android:statusBarColor">@color/color_purple</item>
        <item name="android:windowBackground">@color/theme_color_background</item>
        <item name="android:navigationBarColor">@color/color_purple</item>
        <item name="textInputStyle">@style/ThemeTextInputLayout</item>
        <item name="editTextStyle">@style/ThemeTextInputEditText</item>
    </style>

    <style name="MaterialCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/theme_color_night</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">@dimen/cardview_default_elevation</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="ThemeTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/input_layout</item>
        <item name="hintTextColor">@color/color_light</item>
        <item name="android:textColorHint">@color/color_light</item>
        <item name="passwordToggleTint">@color/color_light</item>
    </style>

    <style name="ThemeTextInputEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/color_light</item>
        <item name="android:textCursorDrawable">@drawable/ic_cursor</item>
        <item name="android:cursorVisible">true</item>
        <item name="colorAccent">@color/color_light</item>
        <item name="colorControlActivated">@color/color_light</item>
    </style>

    <style name="MaterialButtonOutlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:textColor">@color/buttons</item>
        <item name="cornerRadius">25dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/buttons</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="MaterialProgressDialog" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:progressDrawable">@drawable/material_progress_dialog</item>
        <item name="android:textColorPrimary">@color/color_light</item>
    </style>

    <style name="MaterialDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:textColorPrimary">@color/theme_color_components</item>
        <item name="android:background">@color/color_transparent</item>
        <item name="android:backgroundTint">@color/theme_color_dialog</item>
        <item name="shapeAppearanceOverlay">@style/MaterialDialogCorner</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialDialogTitleColor</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialDialogBodyColor</item>
        <item name="buttonBarNegativeButtonStyle">@style/MaterialDialogButtonNegative</item>
        <item name="buttonBarPositiveButtonStyle">@style/MaterialDialogButtonPositive</item>
    </style>

    <style name="MaterialDialogCorner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="MaterialDialogTitleColor" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/theme_color_components</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MaterialDialogBodyColor" parent="@style/MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/theme_color_components</item>
    </style>

    <style name="MaterialDialogButtonNegative" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/theme_color_components</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="MaterialDialogButtonPositive" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/theme_color_components</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="CardTheme" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">?attr/colorPrimary</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardCornerRadius">6dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="MaterialBox" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:buttonTint">@color/theme_color_components</item>
        <item name="android:gravity">center|start</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:textColor">@color/theme_color_components</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>